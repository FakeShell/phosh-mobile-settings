<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>org.sigxcpu.MobileSettings.desktop</id>
  <name>Phosh Mobile Settings</name>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <description>
    <p>
      This app allows you to configure some aspects of Phosh that would otherwise
      require command line usage.
    </p>
  </description>
  <summary>Advanced settings for Mobile devices using Phosh</summary>

  <content_rating type="oars-1.1"/>

  <custom>
    <value key="Purism::form_factor">workstation</value>
    <value key="Purism::form_factor">mobile</value>
  </custom>

  <url type="homepage">https://gitlab.gnome.org//guidog/phosh-mobile-settings</url>
  <url type="bugtracker">https://gitlab.gnome.org//guidog/phosh-mobile-settings/issues</url>

  <screenshots>
    <screenshot type="default">
      <caption>Available panels</caption>
      <image>https://gitlab.gnome.org//guidog/phosh-mobile-settings/-/raw/main/screenshots/panels.png?inline=false</image>
    </screenshot>
    <screenshot type="default">
      <caption>Compositor panel</caption>
      <image>https://gitlab.gnome.org//guidog/phosh-mobile-settings/-/raw/main/screenshots/compositor.png?inline=false</image>
    </screenshot>
    <screenshot type="default">
      <caption>Feedback panel</caption>
      <image>https://gitlab.gnome.org//guidog/phosh-mobile-settings/-/raw/main/screenshots/feedback.png?inline=false</image>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.21.0" date="2022-09-01">
      <description>Allow to enable/disable lockscreen widgets and bug fixes</description>
    </release>
    
    <release version="0.20.0" date="2022-08-08">
      <description>Initial release</description>
    </release>
  </releases>
</component>
